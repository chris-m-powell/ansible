package:
  zathura:
    installed: true
  zathura-pdf-poppler:
    installed: true
  zathura-ps:
    installed: true
  zathura-cb:
    installed: true
  zathura-djvu:
    installed: true
file:
  {{ ansible_facts.user_dir + '/' + zathura.config_dir }}:
    exists: true
    owner: {{ user }}
    group: {{ user }}
    mode: "0750"
    filetype: directory
  {{ [ansible_facts.user_dir,zathura.config_dir,'zathurarc'] | join ('/') }}:
    exists: true
    owner: {{ user }}
    group: {{ user }}
    mode: "0640"
    filetype: file
