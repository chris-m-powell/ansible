package:
  ncmpcpp:
    installed: true
file:
  {{ ansible_facts.user_dir + '/' + ncmpcpp.config_dir }}:
    exists: true
    filetype: directory
    owner: {{ user }}
    group: {{ user }}
    mode: "0750"
  {{ [ansible_facts.user_dir,ncmpcpp.config_dir,'bindings'] | join('/') }}:
    exists: true
    owner: {{ user }}
    group: {{ user }}
    mode: "0640"
    filetype: file
  {{ [ansible_facts.user_dir,ncmpcpp.config_dir,'config'] | join('/') }}:
    exists: true
    owner: {{ user }}
    group: {{ user }}
    mode: "0640"
    filetype: file
