package:
  neofetch:
    installed: true
    title: neofetch | package installed
file:
  {{ ansible_facts.user_dir + '/' + neofetch.config_dir }}:
    exists: true
    filetype: directory
    owner: {{ user }}
    group: {{ user }}
    mode: "0750"
    title: neofetch | configuration directory exists
  {{ [ansible_facts.user_dir,neofetch.config_dir,'config.conf'] | join ('/') }}:
    exists: true
    filetype: file
    owner: {{ user }}
    group: {{ user }}
    mode: "0640"
    title: neofetch | configuration file exists
