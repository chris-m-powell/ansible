package:
  remmina:
    installed: true
file:
  {{ ansible_facts.user_dir + '/' + remmina.config_dir }}:
    exists: true
    owner: {{ user }}
    group: {{ user }}
    mode: "0750"
    filetype: directory
  {{ [ansible_facts.user_dir,remmina.config_dir,'remmina.pref'] | join ('/') }}:
    exists: true
    owner: {{ user }}
    group: {{ user }}
    mode: "0640"
    filetype: file
