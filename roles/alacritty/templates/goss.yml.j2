package:
  alacritty:
    installed: true
  fonts-jetbrains-mono:
    installed: true
file:
  {{ ansible_facts.user_dir + '/' + alacritty.config_dir }}:
    exists: true
    owner: {{ user }}
    group: {{ user }}
    mode: "0750"
    filetype: directory
  {{ [ansible_facts.user_dir,alacritty.config_dir,'alacritty.yml'] | join ('/') }}:
    exists: true
    owner: {{ user }}
    group: {{ user }}
    mode: "0640"
    filetype: file
  {{ [ansible_facts.user_dir,alacritty.config_dir,'nord.yml'] | join ('/') }}:
    exists: true
    owner: {{ user }}
    group: {{ user }}
    mode: "0640"
    filetype: file
