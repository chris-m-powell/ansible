package:
  bpytop:
    installed: true
    title: bpytop | package installed
file:
  {{ ansible_facts.user_dir + '/' + bpytop.config_dir }}:
    exists: true
    owner: {{ user }}
    group: {{ user }}
    filetype: directory
    title: bpytop | configuration directory exists
  {{ [ansible_facts.user_dir,bpytop.config_dir,'bpytop.conf'] | join ('/') }}:
    exists: true
    owner: {{ user }}
    group: {{ user }}
    filetype: file
    title: bpytop | configuration file exists
  /usr/share/applications/bpytop.desktop:
    exists: true
    mode: "0644"
    owner: root
    group: root
    filetype: file
    title: bpytop | desktop file exists
